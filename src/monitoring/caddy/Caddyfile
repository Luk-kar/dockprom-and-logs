:{$HOST_GRAFANA_PORT} {
    reverse_proxy grafana:{$GRAFANA_PORT}
}

:{$HOST_CADVISOR_PORT} {
    basicauth /* {
        {$GRAFANA_ADMIN_USERNAME} {$CADDY_ADMIN_PASSWORD_HASH}
    }
    reverse_proxy cadvisor:{$CADVISOR_PORT}
}

:{$HOST_PROMETHEUS_PORT} {
    basicauth /* {
        {$GRAFANA_ADMIN_USERNAME} {$CADDY_ADMIN_PASSWORD_HASH}
    }
    reverse_proxy prometheus:{$PROMETHEUS_PORT}
}

:{$HOST_ALERTMANAGER_PORT} {
    basicauth /* {
        {$GRAFANA_ADMIN_USERNAME} {$CADDY_ADMIN_PASSWORD_HASH}
    }
    reverse_proxy alertmanager:{$ALERTMANAGER_PORT}
}

:{$HOST_PUSHGATEWAY_PORT} {
    basicauth /* {
        {$GRAFANA_ADMIN_USERNAME} {$CADDY_ADMIN_PASSWORD_HASH}
    }
    reverse_proxy pushgateway:{$PUSHGATEWAY_PORT}
}